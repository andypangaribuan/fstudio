# make executable: $ chmod +x .taskfile
# make alias:
# - $ subl ~/.zshrc
# - add line: alias task="./.taskfile"
# run with $ task

BASE_SAVE_PATH="$HOME/all/treasury/mobile/treasury-2.0"

flutter="$HOME/fvm/versions/3.24.4/bin/flutter"


function help {
  cat .taskfile | \
  sed 's/#: space/&\nfunction space {/g' | \
  grep -B1 -E '^[[:space:]]*([[:alnum:]_]+[[:space:]]*\(\)|function[[:space:]]+[[:alnum:]_]+)' | \
  sed '/function help {/d' | \
  sed -r 's/function //' | \
  sed -r 's/ \{/:/' | \
  grep -v -- -- | \
  sed '/^\s*$/d' | \
  sed 'N;s/\n/###/' | \
  sed -n 's/^#: \(.*\)###\(.*\):.*/\2###→ \1/p' | \
  column -t -s '###' | \
  sed 's/.*→ space.*//g'
}



#: show flutter version
function version {
  $flutter --version
}

#: clean and update
function clean {
  $flutter clean
  $flutter pub get
}

#: analyze the package
function analyze {
  $flutter analyze
}

#: 

#: space


# ___ do not change ___
case $1 in
"") help ;;
*) "$@" ;;
esac
